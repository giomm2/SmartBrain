<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.MainActivity"
    android:clickable="false"
    android:background="@drawable/f">

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Play"
        android:id="@+id/btn_play"
        android:background="#ff6f79ff"
        android:textStyle="italic"
        android:typeface="monospace"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toLeftOf="@+id/nub2"
        android:layout_toStartOf="@+id/nub2" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:background="@android:drawable/screen_background_light_transparent"
        android:inputType="textPersonName"
        android:textSize="30dp"
        android:hint="Name"
        android:singleLine="false"
        android:autoText="false"
        android:textColor="#ff7f82ff"
        android:layout_above="@+id/imageg1"
        android:layout_toLeftOf="@+id/btn_play"
        android:layout_toStartOf="@+id/btn_play" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageg1"
        android:background="@drawable/globo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_play"
        android:layout_alignStart="@+id/btn_play" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageg2"
        android:background="@drawable/globo2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nub1"
        android:layout_toEndOf="@+id/nub1" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageg3"
        android:background="@drawable/globo"
        android:layout_alignTop="@+id/imageg2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageg4"
        android:background="@drawable/globo2"
        android:layout_alignTop="@+id/btn_play"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:id="@+id/imageView"
        android:background="@drawable/arcoiris"
        android:layout_above="@+id/imageg3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/nub1"
        android:background="@drawable/nube"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/nub2"
        android:background="@drawable/nube"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageg4"
        android:layout_alignEnd="@+id/imageg4" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:background="@drawable/smart"
        android:layout_above="@+id/imageg1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
