<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/nature"
    tools:context="com.smartbrain.giovanny.smartbrain.MenuMediumActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/points"
        android:layout_alignBottom="@+id/cloud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:id="@+id/cloud"
        android:background="@drawable/cloud"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/flower1"
        android:background="@drawable/flower1"
        android:layout_alignTop="@+id/flower3"
        android:layout_toLeftOf="@+id/flower3"
        android:layout_toStartOf="@+id/flower3"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/flower2"
        android:background="@drawable/flower2"
        android:layout_marginBottom="76dp"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cloud"
        android:layout_toStartOf="@+id/cloud" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/flower3"
        android:background="@drawable/flower3"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignTop="@+id/flower2"
        android:layout_toLeftOf="@+id/flower2"
        android:layout_toStartOf="@+id/flower2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:id="@+id/smoke"
        android:background="@drawable/smoke"
        android:layout_alignTop="@+id/cloud"
        android:layout_alignRight="@+id/flower2"
        android:layout_alignEnd="@+id/flower2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_exit"
        android:background="@drawable/door"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Medium"
        android:id="@+id/titleMedium"
        android:textAlignment="center"
        android:textSize="30dp"

        android:textColor="#FFBF00"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/flower1"
        android:layout_alignRight="@+id/smoke"
        android:layout_alignEnd="@+id/smoke" />


</RelativeLayout>