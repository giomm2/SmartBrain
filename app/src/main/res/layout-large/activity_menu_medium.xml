<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/nature"
    tools:context="com.smartbrain.giovanny.smartbrain.MenuMediumActivity"
    >


    <ImageView
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:id="@+id/cloud"
        android:background="@drawable/cloud"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:id="@+id/cloud1"
        android:background="@drawable/cloud1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cloud2"
        android:layout_toStartOf="@+id/cloud2" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:id="@+id/cloud2"
        android:background="@drawable/cloud2"
        android:layout_below="@+id/cloud1"
        android:layout_toLeftOf="@+id/cloud"
        android:layout_toStartOf="@+id/cloud"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="50"
        android:layout_height="120"
        android:id="@+id/flower1"
        android:background="@drawable/flower1"
        android:layout_alignBottom="@+id/flower3"
        android:layout_alignRight="@+id/cloud2"
        android:layout_alignEnd="@+id/cloud2"
        android:layout_marginBottom="59dp" />

    <ImageView
        android:layout_width="50"
        android:layout_height="120"
        android:id="@+id/flower2"
        android:background="@drawable/flower2"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50"
        android:layout_height="120"
        android:id="@+id/flower3"
        android:background="@drawable/flower3"
        android:layout_above="@+id/flower2"
        android:layout_toRightOf="@+id/flower2"
        android:layout_toEndOf="@+id/flower2" />

    <ImageView
        android:layout_width="60"
        android:layout_height="60"
        android:id="@+id/smoke"
        android:background="@drawable/smoke"
        android:layout_below="@+id/cloud2"
        android:layout_alignLeft="@+id/flower3"
        android:layout_alignStart="@+id/flower3" />


</RelativeLayout>