<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.Numbers.NumbersTeachActivity"
    android:background="@drawable/wnocheestrellada">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_next"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_play"
        android:layout_alignStart="@+id/btn_play"
        android:background="@drawable/next" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_play"
        android:visibility="invisible"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/playbtn" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_repeat"
        android:background="@drawable/refresh"
        android:layout_alignTop="@+id/btn_play"
        android:layout_toLeftOf="@+id/img_content"
        android:layout_toStartOf="@+id/img_content" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_progress"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_toLeftOf="@+id/img_content"
        android:layout_toStartOf="@+id/img_content"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:visibility="invisible" />


</RelativeLayout>
