<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/layout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/nightsky"
    tools:context="com.smartbrain.giovanny.smartbrain.HardMenuActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:id="@+id/baloom"
        android:background="@drawable/hotair3"
        android:clickable="true"
        android:layout_alignBottom="@+id/firework2"
        android:layout_toLeftOf="@+id/firework2"
        android:layout_toStartOf="@+id/firework2"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id="@+id/baloom2"
        android:background="@drawable/hotair"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_above="@+id/firework2"
        android:layout_toLeftOf="@+id/zeppelin"
        android:layout_toStartOf="@+id/zeppelin" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/baloom3"
        android:background="@drawable/hotair2"
        android:clickable="true"
        android:layout_above="@+id/firework2"
        android:layout_alignRight="@+id/firework"
        android:layout_alignEnd="@+id/firework" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/zeppelin"
        android:background="@drawable/zeppelin"
        android:layout_above="@+id/rocket2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="120dp"
        android:id="@+id/rocket"
        android:background="@drawable/rocket2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/baloom3"
        android:layout_alignStart="@+id/baloom3" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="120dp"
        android:id="@+id/rocket2"
        android:background="@drawable/rocket2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/firework"
        android:background="@drawable/firework"
        android:layout_below="@+id/baloom3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/firework2"
        android:background="@drawable/firework2"
        android:layout_above="@+id/rocket2"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
