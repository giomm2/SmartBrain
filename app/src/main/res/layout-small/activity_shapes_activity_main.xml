<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.shapes.ShapesActivityMain"
    android:background="@drawable/familybeachlittle">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/playbtn"
        android:id="@+id/btn_play"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/previous"
        android:id="@+id/btn_previous"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/next"
        android:id="@+id/btn_next"
        android:layout_alignTop="@+id/image"
        android:layout_alignLeft="@+id/btn_play"
        android:layout_alignStart="@+id/btn_play" />


</RelativeLayout>
