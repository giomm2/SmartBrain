<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.body.BodyTeachActivity1"
    android:background="@drawable/body_marteach">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/img_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:id="@+id/btn_repeat"
        android:layout_alignTop="@+id/img_content"
        android:layout_toLeftOf="@+id/img_content"
        android:layout_toStartOf="@+id/img_content" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:layout_alignTop="@+id/img_content"
        android:layout_toRightOf="@+id/img_content"
        android:layout_toEndOf="@+id/img_content" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Play"
        android:id="@+id/btn_play"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
