<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.body.BodyTeachActivity1"
    android:background="@drawable/mar2grande">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/img_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_repeat"
        android:textSize="50dp"
        android:background="@drawable/refresh"
        android:layout_alignTop="@+id/img_content"
        android:layout_toLeftOf="@+id/txt_progress"
        android:layout_toStartOf="@+id/txt_progress" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_next"
        android:textSize="50dp"
        android:layout_alignTop="@+id/img_content"
        android:layout_alignLeft="@+id/btn_play"
        android:layout_alignStart="@+id/btn_play"
        android:background="@drawable/next" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_play"
        android:textSize="50dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_content"
        android:layout_toEndOf="@+id/img_content"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:background="@drawable/playbtn" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_progress"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_toLeftOf="@+id/img_content"
        android:layout_toStartOf="@+id/img_content"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:visibility="invisible" />




</RelativeLayout>
