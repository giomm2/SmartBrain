<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.MenuEasyActivity"
    android:background="@drawable/fmar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userName"
        android:layout_alignBottom="@+id/imgblue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/points"
        android:layout_below="@+id/imgblue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgblue"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/imgorange"
        android:layout_alignStart="@+id/imgorange"
        android:background="@drawable/pezblue" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/imgorange"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/pez" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:id="@+id/imgbubble"
        android:background="@drawable/bubble"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/points"
        android:layout_toEndOf="@+id/points" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"

        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnfamily"
        android:layout_below="@+id/imgblue"
        android:layout_toRightOf="@+id/imgbubble"
        android:layout_toEndOf="@+id/imgbubble"
        android:background="@drawable/family" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnbody"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:background="@drawable/body" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnvowel"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/vowel" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_exit"
        android:background="@drawable/door"
        android:layout_alignBottom="@+id/imgbubble"
        android:layout_toRightOf="@+id/points"
        android:layout_toEndOf="@+id/points" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:background="@drawable/zdollar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pay" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Easy"
        android:textColor="#FFBF00"

        android:id="@+id/titleEasy"
        android:layout_toRightOf="@+id/imgbubble"
        android:layout_below="@+id/imageView7"
        android:layout_alignRight="@+id/btnbody"
        android:layout_alignEnd="@+id/btnbody"
        android:layout_alignBottom="@+id/userName" />

</RelativeLayout>
