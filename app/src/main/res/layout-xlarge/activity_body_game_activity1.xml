<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.body.BodyGameActivity1"
    android:background="@drawable/familybeach">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image1"
        android:layout_alignTop="@+id/image2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image2"
        android:layout_alignTop="@+id/image5"
        android:layout_toRightOf="@+id/image1"
        android:layout_toEndOf="@+id/image1" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image5"
        android:layout_alignTop="@+id/image6"
        android:layout_toLeftOf="@+id/image6"
        android:layout_toStartOf="@+id/image6" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_next"
        android:longClickable="false"
        android:background="@drawable/next"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/image5"
        android:layout_alignStart="@+id/image5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/heart1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/heart2"
        android:layout_toStartOf="@+id/heart2"
        android:background="@drawable/body_heart" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/heart2"
        android:layout_alignTop="@+id/heart1"
        android:layout_toLeftOf="@+id/image2"
        android:layout_toStartOf="@+id/image2"
        android:background="@drawable/body_heart" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/heart3"
        android:layout_alignTop="@+id/heart2"
        android:layout_toRightOf="@+id/image1"
        android:layout_toEndOf="@+id/image1"
        android:background="@drawable/body_heart" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_repeat"
        android:longClickable="false"
        android:layout_alignBottom="@+id/heart3"
        android:layout_toRightOf="@+id/image5"
        android:layout_toEndOf="@+id/image5"
        android:background="@drawable/sound" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30"
        android:id="@+id/txt_cont"
        android:layout_alignTop="@+id/btn_next"
        android:layout_centerHorizontal="true"
        android:textColor="#ff50ff05"
        android:textSize="80dp"
        android:singleLine="false" />
</RelativeLayout>
