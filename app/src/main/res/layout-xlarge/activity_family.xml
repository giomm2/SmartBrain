<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.family.FamilyActivity"
    android:background="@drawable/mar2grande" >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/viewer"
        android:layout_marginLeft="191dp"
        android:layout_marginStart="191dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/nextBtn"
        android:text="@string/next_button"
        android:layout_marginLeft="171dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="99dp"
        android:layout_alignTop="@+id/viewer"
        android:layout_toRightOf="@+id/viewer"
        android:layout_toEndOf="@+id/viewer" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/btnPlay"
        android:text="@string/play_button"
        android:layout_marginBottom="137dp"
        android:layout_alignBottom="@+id/viewer"
        android:layout_alignLeft="@+id/nextBtn"
        android:layout_alignStart="@+id/nextBtn" />



</RelativeLayout>
