<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.family.FamilyActivity"
    android:background="@drawable/mar2grande" >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/viewer"
        android:layout_marginLeft="191dp"
        android:layout_marginStart="191dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/nextBtn"
        android:background="@drawable/next"
        android:layout_marginLeft="177dp"
        android:layout_marginStart="177dp"
        android:layout_above="@+id/repeat"
        android:layout_toRightOf="@+id/repeat"
        android:layout_toEndOf="@+id/repeat" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnPlay"
        android:background="@drawable/playbtn"
        android:visibility="invisible"
        android:layout_below="@+id/repeat"
        android:layout_alignLeft="@+id/nextBtn"
        android:layout_alignStart="@+id/nextBtn" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/sound"
        android:id="@+id/repeat"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/viewer"
        android:layout_toEndOf="@+id/viewer" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressBar"
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_toLeftOf="@+id/repeat"
        android:layout_toStartOf="@+id/repeat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_progress"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_toLeftOf="@+id/img_content"
        android:layout_toStartOf="@+id/img_content"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:visibility="invisible" />




</RelativeLayout>
