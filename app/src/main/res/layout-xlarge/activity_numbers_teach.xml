<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.Numbers.NumbersTeachActivity"
    android:background="@drawable/wnocheestrellada">

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_next"
        android:layout_marginRight="106dp"
        android:layout_marginEnd="106dp"
        android:layout_marginTop="103dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/next" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_play"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_next"
        android:layout_alignStart="@+id/btn_next"
        android:visibility="invisible"
        android:background="@drawable/playbtn" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_repeat"
        android:background="@drawable/refresh"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_toLeftOf="@+id/img_content" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/img_content"
        android:layout_alignTop="@+id/btn_next"
        android:layout_toLeftOf="@+id/btn_next"
        android:layout_toStartOf="@+id/btn_next"
        android:layout_marginRight="83dp"
        android:layout_marginEnd="83dp" />


</RelativeLayout>
