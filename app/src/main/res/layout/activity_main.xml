<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbrain.giovanny.smartbrain.MainActivity"
    android:background="@drawable/vaca">

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Play"
        android:id="@+id/btn_play"
        android:background="#ffa1daff"
        android:textStyle="italic"
        android:layout_alignTop="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_toEndOf="@+id/txt_name"
        android:typeface="monospace"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:background="#fff6fff4"
        android:textSize="30dp"
        android:text="Name"
        android:singleLine="false"
        android:autoText="false"
        android:textColor="#ff7f82ff"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />


    <ImageView
        android:layout_width="500dp"
        android:layout_height="160dp"
        android:id="@+id/imageView"
        android:background="@drawable/smarthbrain"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
