<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <scale

        android:duration="7000"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1"
        android:repeatCount="infinite">

    </scale>

    <alpha
        android:fromAlpha="10"
        android:toAlpha="0"
        android:duration="7000"
        android:repeatCount="infinite"
        >

    </alpha>


</set>